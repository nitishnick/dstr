<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>dstr</display-name>

    <distributable/>

    <welcome-file-list>
        <welcome-file>users.jsp</welcome-file>
    </welcome-file-list>

    <context-param>
        <param-name>HZ_HOSTS</param-name>
        <param-value>3</param-value>
    </context-param>
    <context-param>
        <param-name>HZ_HOST_1</param-name>
        <param-value>tomcatsvr1</param-value>
    </context-param>
    <context-param>
        <param-name>HZ_HOST_2</param-name>
        <param-value>tomcatsvr2</param-value>
    </context-param>
    <context-param>
        <param-name>HZ_HOST_3</param-name>
        <param-value>tomcatsvr3</param-value>
    </context-param>
    <context-param>
        <param-name>HZ_PORT</param-name>
        <param-value>5701</param-value>
    </context-param>

    <context-param>
        <param-name>MONGO_HOSTS</param-name>
        <param-value>3</param-value>
    </context-param>
    <context-param>
        <param-name>MONGO_HOST_1</param-name>
        <param-value>mongosvr1</param-value>
    </context-param>
    <context-param>
        <param-name>MONGO_HOST_2</param-name>
        <param-value>mongosvr2</param-value>
    </context-param>
    <context-param>
        <param-name>MONGO_HOST_3</param-name>
        <param-value>mongosvr3</param-value>
    </context-param>
    <context-param>
        <param-name>MONGO_PORT</param-name>
        <param-value>27017</param-value>
    </context-param>
    <context-param>
        <param-name>MONGO_DB</param-name>
        <param-value>dstr</param-value>
    </context-param>
    <context-param>
        <param-name>MONGO_USER</param-name>
        <param-value>dstrDbAdmin</param-value>
    </context-param>
    <context-param>
        <param-name>MONGO_PASSWORD</param-name>
        <param-value>1234</param-value>
    </context-param>

    <!-- Run listeners in order, as Hz uses Mongo connection -->
    <listener>
        <listener-class>listener.MongoContextListener</listener-class>
    </listener>
    <listener>
        <listener-class>listener.HzContextListener</listener-class>
    </listener>
</web-app>